<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sorryisme.fmarket.product.mapper.MajorCategoryMapper">


    <resultMap id="majorCategoryMap" type="com.sorryisme.fmarket.product.dto.response.MajorCategoryResponse">
        <id property="majorCategoryId"  column="major_category_id" />
        <result property="majorCategoryName" column="major_category_name" />
        <result property="description" column="description" />
        <result property="createdAt" column="created_at" />
        <result property="updatedAt" column="updated_at" />
        <collection property="subcategories" ofType="com.sorryisme.fmarket.product.dto.response.SubcategoryResponse">
            <id property="subcategoryId" column="sub_Category_id"/>
            <result property="categoryName" column="category_name"/>
            <result property="majorCategoryId" column="major_category_id" />
            <result property="createdAt" column="created_at" />
            <result property="updatedAt" column="updated_at" />
        </collection>
    </resultMap>


    <select id="findMajorCategoryList" resultMap="majorCategoryMap">
        SELECT MC.MAJOR_CATEGORY_ID,
               MC.CATEGORY_NAME,
               MC.CREATED_AT,
               MC.UPDATED_AT,
               SC.SUBCATEGORY_ID,
               SC.CATEGORY_NAME,
               SC.CREATED_AT,
               SC.UPDATED_AT
        FROM MAJOR_CATEGORY MC
        INNER JOIN SUBCATEGORY SC ON (MC.MAJOR_CATEGORY_ID = SC.MAJOR_CATEGORY_ID)
    </select>

</mapper>